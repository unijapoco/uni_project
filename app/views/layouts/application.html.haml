!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %meta{name: "viewport", content:"width=device-width, initial-scale=1.0"}
    %title Uniproject
    = csrf_meta_tags
    = csp_meta_tag
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_pack_tag 'application', 'data-turbolinks-track': 'reload'
  %body
    %div.container-fluid
      %div.row
        %div.col-sm-auto.border-right.sidebar.bg-light
          %ul.nav.flex-column
            - if not user_signed_in?
              %li.nav-item.p-2
                = link_to "Log in", :new_user_session
              %li.nav-item.p-2
                = link_to "Register", :new_user_registration
            - else
              %li.nav-tem.p-2.border-bottom.pb-4
                = link_to "New tip", new_tip_path, class: "btn btn-primary"
              %li.nav-item.p-2
                = link_to current_user.username, user_path(current_user)
              %li.nav-item.p-2
                = link_to "Log out", destroy_user_session_path, method: :delete, class: "text-danger"
            %li.nav-item.p-2
              = link_to "Schedule", "/schedule"
        %div.col-sm-11.ml-sm-auto.pt-2.pl-5
          = yield
